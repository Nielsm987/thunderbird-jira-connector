{
  "manifest_version": 3,
  "name": "Thunderbird Jira Connector",
  "version": "1.0.0",
  "author": "Your Name",
  "description": "Seamlessly create Jira issues from Thunderbird emails",
  "browser_specific_settings": {
    "gecko": {
      "id": "thunderbird-jira-connector@example.com",
      "strict_min_version": "115.0"
    }
  },
  "background": {
    "scripts": ["jira-api.js", "background.js"]
  },
  "permissions": [
    "messagesRead",
    "accountsRead",
    "storage",
    "menus",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "*://*.atlassian.net/*",
    "*://*.atlassian.com/*"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
